	"item": [
		{
			"name": "Get Movies by Year - 2025",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has correct structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('year');",
							"    pm.expect(jsonData).to.have.property('count');",
							"    pm.expect(jsonData).to.have.property('movies');",
							"});",
							"",
							"pm.test(\"Movies is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.movies).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Response contains movies\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.movies.length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Year matches requested year\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.year).to.eql(\"2025\");",
							"});",
							"",
							"pm.test(\"Count matches number of movies\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.count).to.eql(jsonData.movies.length);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://tcss460-moviewebapi.onrender.com/moviesbyyear?year=2025",
